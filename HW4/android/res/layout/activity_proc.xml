<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/stat_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/proc/stat :" />

    <TextView
        android:id="@+id/cpu_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cpu usage : " />

    <Button
        android:id="@+id/file_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read File" />

    <Button
        android:id="@+id/parsing_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Parsing" />

    <Button
        android:id="@+id/parsing_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Parsing" />
    
</LinearLayout>
